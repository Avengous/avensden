<% provide(:title, 'Feedback') %>

<style>
	#stream_title {
		padding-top: 15px;
		font-family: Papyrus, fantasy;
		color: #FFFFFF;
		font-size: 36px;
		text-align: center;
		text-shadow: 0px 2px 0px #990000;
	}
	
	#twitch_stream {
		padding-top: 15px;
		text-align: center;
		border-width: 1px;
	}
	
	#live_embed_player_flash, #chat_embed {
		-moz-padding-start: 50px;
  		box-shadow: 0 1px 2px #FF0000, /*bottom external highlight*/
  					0 -1px 1px #FF0000, /*top external shadow*/ 
  					inset 0 -1px 1px rgba(80,0,0,0.5), /*bottom internal shadow*/ 
  					inset 0 1px 1px rgba(80,0,0,0.8); /*top internal highlight*/
	}
</style>

<h1 id="stream_title">Avengous - League of Legends</h1>

<div id="twitch_stream">
	<object 
		type="application/x-shockwave-flash" 
		height="378" 
		width="620" 
		id="live_embed_player_flash" 
		data="http://www.twitch.tv/widgets/live_embed_player.swf?channel=avengous" 
		bgcolor="#000000">
	<param name="allowFullScreen" value="true" />
	<param name="allowScriptAccess" value="always" />
	<param name="allowNetworking" value="all" />
	<param name="movie" value="http://www.twitch.tv/widgets/live_embed_player.swf" />
	<param name="flashvars" value="hostname=www.twitch.tv&channel=avengous&auto_play=true&start_volume=25" />
	</object>
	
	
	<iframe 
		frameborder="0" 
		scrolling="no" 
		id="chat_embed" 
		src="http://twitch.tv/chat/embed?channel=avengous&amp;popout_chat=true" 
		height="378" 
		width="350">
	</iframe>
</div>
