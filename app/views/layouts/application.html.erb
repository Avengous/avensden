  			background: transparent;
  			color: #ffffff;  
  			margin: 0 auto;
  			white-space: nowrap;
  			height:30px;
  			width:100px;
  			text-align:center;
  			vertical-align: middle;}
  		
  		nav ul li:hover, nav ul li.hover { /* Didn't change anything */ 
  			position: relative; 
  			z-index: 599;
  			cursor:default;
  		}
  		
		nav ul li a:hover { 
  			background: #990000;
  			color: #FFFFFF
  		}
  		
		nav li:hover ul { /* Visibility of nested list items. */
  			display: inline;
  		}
  		
  		nav li li ul {
  			visibility: hidden;
  		}
  		
  		nav li li:hover ul{
  			visibility: visible;
  		}
  		
		nav li li {
			float : none;
		}
		
nav ul ul {
  visibility: hidden;
  position: absolute;
  top: 100%;
  left: 0;
  z-index: 598;
  width: 100%;
}

nav ul li:hover > ul {
  visibility: visible;
}
  		
 		nav li:hover li {
